<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlsearchLocationRoot"
    android:layout_marginTop="@dimen/margin_3"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginBottom="@dimen/margin_1x"
        android:layout_marginLeft="@dimen/margin_2x"
        android:id="@+id/llProfileInfo"
        android:orientation="horizontal"
        android:gravity="left|center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="RtlHardcoded">

        <ImageView
            android:scaleType="fitCenter"
            android:id="@+id/ivUserProfileImage"
            android:layout_width="@dimen/margin_7x"
            android:layout_height="@dimen/margin_7x" />

        <TextView
            android:gravity="left|center"
            android:layout_marginLeft="@dimen/margin_1x"
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="user"
            android:textStyle="normal"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_large" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_margin="@dimen/margin_1x"
        android:layout_below="@id/llProfileInfo"
        android:id="@+id/horizontalList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>